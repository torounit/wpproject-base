{
    "name": "@torounit/wp",
    "version": "0.0.1",
    "private": true,
    "description": "",
    "repository": {
        "type": "git",
        "url": "git@gitlab.ham.works:hamworks/bacardijapan/wp.git"
    },
    "scripts": {
        "bs": "browser-sync start --config bs-config.js",
        "build": "npm run build:js && npm run build:css",
        "build:css": "npm run build:css:blocks & npm run build:css:theme",
        "build:css:blocks": "postcss ./htdocs/wp-content/mu-plugins/blocks/src/[^_]*.css --dir ./htdocs/wp-content/mu-plugins/blocks/dist --verbose",
        "build:css:theme": "bash ./sh/build-css-theme.sh",
        "build:js": "webpack --verbose",
        "dev": "npm run build:css:blocks -- -w & npm run build:css:theme -- -w & webpack --watch",
        "eslint": "eslint ./htdocs/wp-content/themes/ ./htdocs/wp-content/mu-plugins/blocks/src/",
        "production": "cross-env NODE_ENV=production npm run build",
        "start": "npm run bs & npm run dev",
        "stylelint": "stylelint \"./htdocs/wp-content/themes/bacardijapan/**/*.css\"",
        "test": "npm run eslint & npm run stylelint"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.10",
        "@fortawesome/free-brands-svg-icons": "^5.6.1",
        "@fortawesome/free-regular-svg-icons": "^5.6.1",
